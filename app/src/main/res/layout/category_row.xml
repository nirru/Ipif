<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/header"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions"
            android:singleLine="true"
            android:ellipsize="end"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="Shrimb Foundue"
            android:layout_toLeftOf="@+id/cat_image"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/desc"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/cat_image"
            android:inputType="textMultiLine|textNoSuggestions"
            android:minLines="1"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_below="@+id/header"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="A Belndy of spicy Syrump,cheese and ffresh pico de gallo with unlimited chips"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/cat_image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/cheeseburger"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true" />


      <TextView
          android:id="@+id/divider"
          android:layout_width="16dp"
          android:layout_height="match_parent"
          android:layout_below="@+id/cat_image"
          android:layout_centerInParent="true"/>

        <Button
            android:id="@+id/order_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:minWidth="145dp"
            android:layout_alignParentLeft="true"
            android:textColor="@android:color/white"
            android:text="Add to order $9"
            android:background="@drawable/rounded_blue_btn"
            android:layout_margin="10dp"
            android:layout_below="@+id/cat_image"/>

        <Button
            android:id="@+id/more_info"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:minWidth="145dp"
            android:layout_alignParentRight="true"
            android:text="More Info"
            android:textColor="@color/blue_text_color"
            android:background="@drawable/rounded_white_btn"
            android:layout_margin="10dp"
            android:layout_below="@+id/cat_image"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>