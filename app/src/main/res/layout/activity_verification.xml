<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center|top"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="centerInside"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:src="@drawable/ipif"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Menu"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                style="@style/Base.TextAppearance.AppCompat.Medium"/>


        </LinearLayout>



    </RelativeLayout>

    <TextView
        android:id="@+id/your"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Your Verification code has been sent to:"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:layout_below="@+id/toolbar"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1-12345698700"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/your"
        android:textSize="18sp"
        android:layout_marginBottom="20dp"/>


    <TextView
        android:id="@+id/to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To complete your number verification,"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_below="@+id/number"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/please"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="please enter the 6-dight verificaton code."
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_below="@+id/to"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="5dp"/>


    <EditText
        android:id="@+id/code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:text="dkfdfudfd"
        android:textColor="@android:color/white"
        android:background="@drawable/white_border_rectangle"
        android:textColorHint="@color/white"
        android:textAlignment="center"
        android:layout_below="@+id/please"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"/>


    <Button
        android:id="@+id/verification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_grey_btn"
        android:layout_below="@+id/code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="VERIFY"
        android:textColor="@color/red"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"/>


</LinearLayout>