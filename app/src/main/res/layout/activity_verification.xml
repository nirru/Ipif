<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">


    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/your"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Your Verification code has been sent to:"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:layout_below="@+id/toolbar"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1-12345698700"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/your"
        android:textSize="18sp"
        android:layout_marginBottom="20dp"/>


    <TextView
        android:id="@+id/to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To complete your number verification,"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_below="@+id/number"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/please"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="please enter the 6-dight verificaton code."
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_below="@+id/to"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="5dp"/>


    <EditText
        android:id="@+id/code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_border_rectangle"
        android:hint="*  *  *  *  *  *"
        android:textColorHint="@color/white"
        android:textAlignment="center"
        android:layout_below="@+id/please"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_grey_btn"
        android:layout_below="@+id/code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="VERIFY"
        android:textColor="@color/red"
        android:textSize="18sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>


</RelativeLayout>